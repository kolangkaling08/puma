RewriteEngine On
RewriteBase /

# === 0. Redirect root folder ke /jpterus66
RewriteRule ^$ jpterus66 [R=301,L]

# === 1. Biarkan file .txt, .xml, robots.txt langsung diakses
RewriteCond %{REQUEST_URI} \.(txt|xml)$ [NC,OR]
RewriteCond %{REQUEST_URI} robots\.txt$ [NC]
RewriteRule .* - [L]

# === 2. Clean URL: /banana → index.php?q=banana
RewriteRule ^([^/]+)/?$ index.php?q=$1 [L,QSA]

# === 3. Redirect query string: /?q=banana → /banana
RewriteCond %{QUERY_STRING} ^q=([^&]+)$
RewriteRule ^$ %1? [R=301,L]
